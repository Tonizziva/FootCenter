@model IEnumerable<FootCenter.Models.Ajanvaraus>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

	<div class="bg-faded p-4 my-4">
		<hr class="divider">
		<h2 class="text-center text-lg text-uppercase my-0">
			Varaa
			<strong>Aika</strong>
		</h2>
		<hr class="divider">
		<form>
			<div class="form-group">
				<label for="etunimi">Etunimi</label>
				<input type="text" class="form-control" id="firstname" placeholder="Etunimi">
			</div>
			<div class="form-group">
				<label for="sukunimi">Sukunimi</label>
				<input type="text" class="form-control" id="lastname" placeholder="Sukunimi">
			</div>
			<div class="form-group">
				<label for="exampleFormControlInput1">Sähköposti</label>
				<input type="email" class="form-control" id="sposti" placeholder="name@example.com">
			</div>
			<div class="form-group">

				<label for="päivä">Päivämäärä</label>
				<input type="text" class="form-control" id="datepicker" name="varaus" value="" required>
			</div>

			<div class="form-group">
				<label for="tyyppi">Example multiple select</label>
				<select multiple class="form-control" id="exampleFormControlSelect2">
					<option>Pohjallisten arviointi</option>
					<option>jalkojenhoito</option>
					<option>hieronta</option>
				</select>
			</div>

			<p id="">
				<input id="timepicker" type="text" class="timepicker" />
			</p>



			<button class="btn btn-primary" id="submitBtn" onClick="submitClick()">Lähetä</button>
		</form>
	</div>
</div>